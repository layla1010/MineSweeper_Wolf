<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="EditQuestionRoot"
           styleClass="themed-bg"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="control.EditQuestionController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="800.0" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>

                <Label text="Edit Question" textFill="WHITE">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="32.0" />
                    </font>
                </Label>

                <VBox spacing="15.0"
                      style="-fx-background-color: rgba(0,0,0,0.2); -fx-background-radius: 15; -fx-padding: 20;">

                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label prefWidth="150.0" text="Editing ID:" textFill="WHITE">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>

                        <!-- IMPORTANT: keep fx:id to match controller; do not hardcode a real ID -->
                        <Label fx:id="idTextField" text="id" textFill="#ffd700">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label prefWidth="150.0" text="Difficulty:" textFill="WHITE">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>

                        <ComboBox fx:id="difficultyComboBox" prefWidth="200.0" styleClass="glass-combo">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="EASY" />
                                    <String fx:value="MEDIUM" />
                                    <String fx:value="HARD" />
                                    <String fx:value="EXPERT" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>

                    <VBox spacing="5.0">
                        <Label text="Question Text:" textFill="WHITE">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>

                        <TextArea fx:id="questionTextArea"
                                  prefRowCount="3"
                                  wrapText="true"
                                  styleClass="glass-input" />
                    </VBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="A:" textFill="WHITE" minWidth="25.0">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="optionATextField" styleClass="glass-input" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="B:" textFill="WHITE" minWidth="25.0">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="optionBTextField" styleClass="glass-input" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="C:" textFill="WHITE" minWidth="25.0">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="optionCTextField" styleClass="glass-input" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label text="D:" textFill="WHITE" minWidth="25.0">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="optionDTextField" styleClass="glass-input" HBox.hgrow="ALWAYS" />
                    </HBox>

                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label text="Correct Answer:" textFill="WHITE">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="16.0" />
                            </font>
                        </Label>

                        <ComboBox fx:id="correctAnswerComboBox" prefWidth="100.0" styleClass="glass-combo">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="A" />
                                    <String fx:value="B" />
                                    <String fx:value="C" />
                                    <String fx:value="D" />
                                </FXCollections>
                            </items>
                        </ComboBox>
                    </HBox>

                </VBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <Button fx:id="saveButton"
                            onAction="#onSaveButtonClicked"
                            prefHeight="45.0"
                            prefWidth="165.0"
                            styleClass="primary-button"
                            text="Save Changes"
                            textFill="WHITE">
                        <font>
                            <Font name="Copperplate Gothic Bold" size="15.0" />
                        </font>
                    </Button>

                    <Button fx:id="cancelButton"
                            onAction="#onCancelButtonClicked"
                            prefHeight="45.0"
                            prefWidth="150.0"
                            styleClass="secondary-button"
                            text="Cancel"
                            textFill="WHITE">
                        <font>
                            <Font name="Copperplate Gothic Bold" size="15.0" />
                        </font>
                    </Button>
                </HBox>

            </children>
        </VBox>
    </children>

    <stylesheets>
        <URL value="@../css/base.css" />
    </stylesheets>

</StackPane>
