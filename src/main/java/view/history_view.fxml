<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root"
            prefHeight="750.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="control.HistoryController"
            styleClass="history-root"
            stylesheets="@../css/history.css">

    <!-- ===== Top bar: Back + Title ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button text="Back"
                        onAction="#onBackBtnClicked"
                        styleClass="history-back-button"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="History" styleClass="history-title">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="40.0"/>
                    </font>
                </Label>

                <Region prefWidth="40.0"/>
            </children>
            <padding>
                <Insets top="15.0" right="40.0" bottom="10.0" left="20.0"/>
            </padding>
        </HBox>
    </top>

    <!-- ===== Center: scrollable list of cards ===== -->
    <center>
        <ScrollPane fitToWidth="true" pannable="true"
                    BorderPane.alignment="CENTER"
                    styleClass="history-scroll">
            <content>
                <VBox fx:id="historyList"
                      spacing="15.0"
                      styleClass="history-list">
                    <!-- cards will be added from HistoryController -->
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
