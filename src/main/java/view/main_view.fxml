<GridPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2, #f093fb);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.MainController">

    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>

    <children>

        <!-- PRIMARY "PLAY" / NEW GAME BUTTON (glass, strong border, glow in controller) -->
        <StackPane GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
            <children>
                <Button fx:id="newGameBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onNewGameClicked" prefHeight="75.0" prefWidth="550.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15));-fx-background-radius: 50; -fx-border-color: rgba(255,255,255,0.50); -fx-border-width: 3; -fx-border-radius: 50; -fx-cursor: hand;" text="New Game" textFill="#ffffff">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="36.0" />
                    </font>
                    <styleClass>
                        <String fx:value="floating-card" />
                        <String fx:value="zoom-on-hover" />
                    </styleClass>
                </Button>

                <!-- shimmer rectangle, controlled in controller -->
                <Rectangle fx:id="newGameShimmer" mouseTransparent="true" opacity="0.0" rotate="45" />
            </children>
        </StackPane>

        <!-- SECONDARY GLASS BUTTON: QUESTION MANAGEMENT -->
        <Button fx:id="questionManagementBtn" minWidth="-Infinity" mnemonicParsing="false" onAction="#onQuestionManagementClicked" prefHeight="75.0" prefWidth="550.0" style="                     -fx-background-color: rgba(255,255,255,0.20);                     -fx-background-radius: 50;                     -fx-border-color: rgba(255,255,255,0.30);                     -fx-border-width: 2;                     -fx-border-radius: 50;                     -fx-cursor: hand;                 " text="Question management" textFill="#ffffff" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER">
            <font>
                <Font name="Copperplate Gothic Bold" size="36.0" />
            </font>
            <styleClass>
                <String fx:value="floating-card" />
                <String fx:value="zoom-on-hover" />
            </styleClass>
        </Button>

        <!-- SECONDARY GLASS BUTTON: HISTORY -->
        <Button fx:id="historyBtn" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onHistoryBtnClicked" prefHeight="75.0" prefWidth="550.0" style="                     -fx-background-color: rgba(255,255,255,0.20);                     -fx-background-radius: 50;                     -fx-border-color: rgba(255,255,255,0.30);                     -fx-border-width: 2;                     -fx-border-radius: 50;                     -fx-cursor: hand;                 " text="history" textFill="#ffffff" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <font>
                <Font name="Copperplate Gothic Bold" size="36.0" />
            </font>
            <styleClass>
                <String fx:value="floating-card" />
                <String fx:value="zoom-on-hover" />
            </styleClass>
        </Button>

        <!-- SETTINGS ICON BUTTON â€“ same glass theme but smaller -->
        <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="100.0" prefWidth="100.0" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.valignment="CENTER">
            <children>
                <Button fx:id="settingsBtn" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#onSettingsClicked" prefHeight="80.0" prefWidth="80.0" style="                             -fx-background-color: rgba(255,255,255,0.20);                             -fx-background-radius: 40;                             -fx-border-color: rgba(255,255,255,0.30);                             -fx-border-width: 2;                             -fx-border-radius: 40;                             -fx-cursor: hand;                         " text="">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@/Images/mechanical-gears-.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <styleClass>
                        <String fx:value="floating-card" />
                        <String fx:value="zoom-on-hover" />
                    </styleClass>
                </Button>
            </children>
            <GridPane.margin>
                <Insets right="10.0" />
            </GridPane.margin>
        </StackPane>

    </children>
</GridPane>
