<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="mainGrid" maxHeight="-Infinity" maxWidth="-Infinity" 
          minHeight="-Infinity" minWidth="-Infinity" 
          prefHeight="750.0" prefWidth="1200.0" 
          style="-fx-background-color: #050814;" 
          xmlns="http://javafx.com/javafx/21" 
          xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="control.MainController">

  <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>

  <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>

   <children>

      <!-- ðŸ”§ SETTINGS BUTTON (new) -->
      <ImageView fx:id="settingsBtn"
                 fitHeight="55" fitWidth="55"
                 pickOnBounds="true" preserveRatio="true"
                 onMouseClicked="#onSettingsClicked"
                 style="-fx-cursor: hand;"
                 GridPane.columnIndex="0" GridPane.rowIndex="0"
                 GridPane.halignment="LEFT" GridPane.valignment="TOP" 
                 translateX="20" translateY="15">
          <image>
              <Image url="@/Images/settings_icon.png"/>
          </image>
      </ImageView>

      <Button fx:id="newGameBtn" maxWidth="-Infinity" minWidth="-Infinity"
              mnemonicParsing="false" onAction="#onNewGameClicked" 
              prefHeight="75.0" prefWidth="550.0"
              style="-fx-background-color: linear-gradient(#3C8DFF, #274B8E);" 
              text="New Game" textFill="#f6f7ff"
              GridPane.columnIndex="1" GridPane.halignment="CENTER" 
              GridPane.rowIndex="3" GridPane.valignment="CENTER">
         <font>
            <Font name="Copperplate Gothic Bold" size="36.0" />
         </font>
      </Button>

      <ImageView fx:id="logoImage" fitHeight="400.0" fitWidth="400.0"
                 opacity="0.0" pickOnBounds="true" preserveRatio="true"
                 style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 20, 0.3, 0, 4);" 
                 translateX="-600.0"
                 GridPane.columnIndex="1" GridPane.halignment="CENTER" 
                 GridPane.rowIndex="1" GridPane.valignment="CENTER">
          <image>
              <Image url="@/Images/logoImage.png" />
          </image>
      </ImageView>

      <Button fx:id="historyBtn" maxWidth="-Infinity" minWidth="-Infinity"
              mnemonicParsing="false" onAction="#onHistoryBtnClicked"
              prefHeight="75.0" prefWidth="550.0"
              style="-fx-background-color: linear-gradient(#3C8DFF, #274B8E);" 
              text="history" textFill="#f6f7ff"
              GridPane.columnIndex="1" GridPane.halignment="CENTER" 
              GridPane.rowIndex="4" GridPane.valignment="CENTER">
         <font>
            <Font name="Copperplate Gothic Bold" size="36.0" />
         </font>
      </Button>

      <Button fx:id="questionManagementBtn" minWidth="-Infinity"
              mnemonicParsing="false" onAction="#onQuestionManagementClicked"
              prefHeight="75.0" prefWidth="550.0"
              style="-fx-background-color: linear-gradient(#3C8DFF, #274B8E);" 
              text="Question management" textFill="#f6f7ff"
              GridPane.columnIndex="1" GridPane.halignment="CENTER" 
              GridPane.rowIndex="5" GridPane.valignment="CENTER">
         <font>
            <Font name="Copperplate Gothic Bold" size="36.0" />
         </font>
      </Button>

   </children>
</GridPane>
