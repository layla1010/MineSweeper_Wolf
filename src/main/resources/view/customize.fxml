<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="720.0" stylesheets="@../css/base.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" styleClass="customize-root" fx:controller="control.CustomizeController">

    <children>
        <VBox fx:id="root" alignment="TOP_CENTER" spacing="22" styleClass="themed-bg" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="26" left="26" right="26" top="22" />
            </padding>

            <!-- Top bar: back button -->
            <HBox alignment="CENTER_LEFT" prefHeight="60">
                <children>
                    <Button fx:id="backBtn" onAction="#onBackClicked" styleClass="settings-back-button" text="â†">
                        <font>
                            <Font name="Copperplate Gothic Bold" size="18" />
                        </font>
                    </Button>
                    <Region HBox.hgrow="ALWAYS" />
                </children>
            </HBox>

            <!-- Title -->
            <Label styleClass="settings-title" text="CUSTOMIZE THEMES" textFill="WHITE">
                <font>
                    <Font name="Copperplate Gothic Bold" size="44" />
                </font>
            </Label>

            <Label styleClass="settings-subtitle" text="Choose how your game looks. Changes apply immediately." textFill="WHITE">
                <font>
                    <Font name="Copperplate Gothic Light" size="16" />
                </font>
            </Label>

            <!-- Options -->
            <VBox maxWidth="560" spacing="16">
                <children>

                    <!-- Default -->
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="filter-row">
                        <children>
                            <Label styleClass="filter-label" text="Colorful">
                                <font>
                                    <Font name="Copperplate Gothic Light" size="20" />
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS" />

                            <ToggleButton fx:id="defaultBtn" onAction="#onDefaultSelected" styleClass="theme-select-btn" text="SELECT" />
                        </children>
                    </HBox>

                    <!-- Wolf -->
                    <HBox alignment="CENTER_LEFT" spacing="12" styleClass="filter-row">
                        <children>
                            <Label styleClass="filter-label" text="Fiery Wolf (Default)">
                                <font>
                                    <Font name="Copperplate Gothic Light" size="20" />
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS" />

                            <ToggleButton fx:id="wolfBtn" onAction="#onWolfSelected" styleClass="theme-select-btn" text="SELECT" />
                        </children>
                    </HBox>
               <HBox alignment="CENTER_LEFT" spacing="12" styleClass="filter-row">
                  <children>
                     <Label styleClass="filter-label" text="Cyber blue">
                        <font>
                           <Font name="Copperplate Gothic Light" size="20" />
                        </font>
                     </Label>
                     <Region HBox.hgrow="ALWAYS" />
                     <ToggleButton fx:id="cyberBlueBtn" onAction="#onCyberSelected" styleClass="theme-select-btn" text="SELECT" />
                  </children>
               </HBox>

                </children>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
