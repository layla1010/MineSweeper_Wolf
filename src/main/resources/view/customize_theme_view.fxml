<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="520.0" prefWidth="720.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="control.CustomizeController">

    <children>
        <VBox fx:id="root"
              alignment="TOP_CENTER"
              spacing="22"
              styleClass="filters-root"
              AnchorPane.topAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0">

            <padding>
                <Insets top="22" right="26" bottom="26" left="26"/>
            </padding>

            <!-- Top bar: back button -->
            <HBox alignment="CENTER_LEFT" prefHeight="60">
                <children>
                    <Button fx:id="backBtn"
                            text="â†"
                            onAction="#onBackClicked"
                            styleClass="filters-back-btn">
                        <font>
                            <Font name="Copperplate Gothic Bold" size="18"/>
                        </font>
                    </Button>
                    <Region HBox.hgrow="ALWAYS"/>
                </children>
            </HBox>

            <!-- Title -->
            <Label text="CUSTOMIZE THEMES" styleClass="filters-title">
                <font>
                    <Font name="Copperplate Gothic Bold" size="44"/>
                </font>
            </Label>

            <!-- Options container (like filters list area) -->
            <VBox spacing="16" styleClass="filters-list">
                <children>

                    <Label text="Choose Theme:" styleClass="filters-subtitle">
                        <font>
                            <Font name="Copperplate Gothic Light" size="18"/>
                        </font>
                    </Label>

                    <!-- Wolf Theme row -->
                    <HBox styleClass="filters-row" alignment="CENTER_LEFT" spacing="12">
                        <children>
                            <Label text="Wolf theme" styleClass="filters-row-label">
                                <font>
                                    <Font name="Copperplate Gothic Light" size="22"/>
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS"/>

                            <!-- Styled like a selector pill -->
                            <ToggleButton fx:id="wolfThemeBtn"
                                          text="SELECT"
                                          onAction="#onWolfThemeSelected"
                                          styleClass="theme-select-btn"/>
                        </children>
                    </HBox>

                    <!-- Colorful Theme row -->
                    <HBox styleClass="filters-row" alignment="CENTER_LEFT" spacing="12">
                        <children>
                            <Label text="Colorful theme" styleClass="filters-row-label">
                                <font>
                                    <Font name="Copperplate Gothic Light" size="22"/>
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS"/>

                            <ToggleButton fx:id="colorfulThemeBtn"
                                          text="SELECT"
                                          onAction="#onColorfulThemeSelected"
                                          styleClass="theme-select-btn"/>
                        </children>
                    </HBox>

                    <!-- Customized Theme row -->
                    <HBox styleClass="filters-row" alignment="CENTER_LEFT" spacing="12">
                        <children>
                            <Label text="Customized theme" styleClass="filters-row-label">
                                <font>
                                    <Font name="Copperplate Gothic Light" size="22"/>
                                </font>
                            </Label>

                            <Region HBox.hgrow="ALWAYS"/>

                            <!-- regular button because it doesn't select -->
                            <Button fx:id="customizedThemeBtn"
                                    text="OPEN"
                                    onAction="#onCustomizedThemeClicked"
                                    styleClass="theme-disabled-btn"/>
                        </children>
                    </HBox>

                </children>
            </VBox>

        </VBox>
    </children>

    <stylesheets>
        <!-- keep your global theme -->
        <URL value="@../css/theme.css"/>
        <!-- new file to match filters style -->
        <URL value="@../css/customize.css"/>
    </stylesheets>
</AnchorPane>
