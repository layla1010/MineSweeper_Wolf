<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="139.0" prefWidth="502.0" styleClass="question-card" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <children>
        <VBox alignment="CENTER" prefHeight="125.0" prefWidth="523.0" spacing="8.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>

                <!-- TOP LINE: ID + DIFFICULTY + EDIT/DELETE -->
                <HBox alignment="CENTER" prefHeight="14.0" prefWidth="503.0" spacing="10.0">
                    <children>
                        <Label fx:id="idLabel" styleClass="id-label" text="#1" />
                        <Label fx:id="difficultyLabel" styleClass="difficulty-badge" text="Easy" />

                        <HBox alignment="CENTER_RIGHT" prefHeight="43.0" prefWidth="249.0" spacing="10.0">
                            <children>
                                <ImageView fx:id="editImg" fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../../../../../Downloads/editing.png" />
                                    </image>
                                </ImageView>
                                <ImageView fx:id="deleteImg" fitHeight="24.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../../../../../../../Downloads/bin.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <!-- QUESTION TEXT -->
                <Label fx:id="questionLabel" styleClass="question-text" text="QUESTION #1" wrapText="true" />

                <!-- OPTIONS -->
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="35.0" prefWidth="503.0" spacing="10.0">
                            <children>
                                <Button fx:id="option1Button" mnemonicParsing="false" text="OPTION #1" HBox.hgrow="ALWAYS" />
                                <Button fx:id="option2Button" mnemonicParsing="false" text="OPTION #2" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                        <HBox alignment="TOP_CENTER" prefHeight="30.0" prefWidth="503.0" spacing="10.0">
                            <children>
                                <Button fx:id="option3Button" mnemonicParsing="false" text="OPTION #3" HBox.hgrow="ALWAYS" />
                                <Button fx:id="option4Button" mnemonicParsing="false" text="OPTION #4" HBox.hgrow="ALWAYS" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</Pane>
