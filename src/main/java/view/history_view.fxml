<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>


<BorderPane fx:id="root"
            prefHeight="750.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="control.HistoryController"
            styleClass="history-root"
            stylesheets="@../css/history.css">

    <!-- ===== Top bar: Back + Title ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0"
      styleClass="history-filter-bar">

    <children>
        <Label text="Filter by:" styleClass="history-filter-label"/>

        <ComboBox fx:id="filterTypeCombo" prefWidth="150.0"
                  onAction="#onFilterTypeChanged">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="All"/>
                    <String fx:value="Player name"/>
                    <String fx:value="Difficulty"/>
                    <String fx:value="Result"/>
                    <String fx:value="Date"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Text filter (for player/difficulty/result) -->
        <TextField fx:id="filterValueField"
                   promptText="Enter value..."
                   prefWidth="180.0"/>

        <!-- Date filter (used when type = Date) -->
        <DatePicker fx:id="dateFilterPicker"
                    promptText="Select date"
                    prefWidth="160.0"/>

        <Button text="Apply"
                onAction="#onFilterApplyClicked"
                styleClass="history-small-button"/>

        <Button text="Clear"
                onAction="#onClearFilterClicked"
                styleClass="history-small-button"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label text="Sort by:" styleClass="history-filter-label"/>

        <ComboBox fx:id="sortTypeCombo" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="None"/>
                    <String fx:value="Score (high → low)"/>
                    <String fx:value="Score (low → high)"/>
                    <String fx:value="Date (newest)"/>
                    <String fx:value="Date (oldest)"/>
                    <String fx:value="Duration (short → long)"/>
                    <String fx:value="Duration (long → short)"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Button text="Sort"
                onAction="#onSortBtnClicked"
                styleClass="history-small-button"/>
    </children>
</HBox>

    </top>

    <!-- ===== Center: scrollable list of cards ===== -->
   <center>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>

            <children>
                <!-- ===== Filter + Sort bar ===== -->
                <HBox alignment="CENTER_LEFT" spacing="10.0"
                      styleClass="history-filter-bar">

                    <children>
                        <Label text="Filter by:" styleClass="history-filter-label"/>

                        <ComboBox fx:id="filterTypeCombo" prefWidth="150.0">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="All"/>
                                    <String fx:value="Player name"/>
                                    <String fx:value="Difficulty"/>
                                    <String fx:value="Result"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <TextField fx:id="filterValueField"
                                   promptText="Enter value..."
                                   prefWidth="180.0"/>

                        <Button text="Apply"
                                onAction="#onFilterApplyClicked"
                                styleClass="history-small-button"/>

                        <Button text="Clear"
                                onAction="#onClearFilterClicked"
                                styleClass="history-small-button"/>

                        <Region HBox.hgrow="ALWAYS"/>

                        <Label text="Sort by:" styleClass="history-filter-label"/>

                        <ComboBox fx:id="sortTypeCombo" prefWidth="170.0">
                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <String fx:value="None"/>
                                    <String fx:value="Score (high → low)"/>
                                    <String fx:value="Score (low → high)"/>
                                    <String fx:value="Date (newest)"/>
                                    <String fx:value="Date (oldest)"/>
                                </FXCollections>
                            </items>
                        </ComboBox>

                        <Button text="Sort"
                                onAction="#onSortBtnClicked"
                                styleClass="history-small-button"/>
                    </children>
                </HBox>

                <!-- ===== Scrollable list of cards ===== -->
                <ScrollPane fitToWidth="true" pannable="true"
                            styleClass="history-scroll">
                    <content>
                        <VBox fx:id="historyList"
                              spacing="15.0"
                              styleClass="history-list">
                            <!-- cards added from controller -->
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>

</BorderPane>
