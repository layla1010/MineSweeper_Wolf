<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.QuestionCardController" spacing="8" styleClass="question-card">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- TOP LINE: ID + DIFFICULTY + EDIT/DELETE -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <children>
            <Label fx:id="idLabel" styleClass="id-label" text="#1"/>
            <Label fx:id="difficultyLabel" styleClass="difficulty-badge" text="Easy"/>

            <HBox spacing="10" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <children>
                    <ImageView fx:id="editImg" onMouseClicked="#onEditClicked" fitHeight="24.0" fitWidth="20.0"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/Images/editing.png"/>
                        </image>
                    </ImageView>
                    <ImageView fx:id="deleteImg" onMouseClicked="#onDeleteClicked" fitHeight="24.0" fitWidth="20.0"
                               pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@/Images/bin.png"/>
                        </image>
                    </ImageView>
                </children>
            </HBox>
        </children>
    </HBox>

    <!-- QUESTION TEXT -->
    <Label fx:id="questionLabel"
           styleClass="question-text"
           wrapText="true"
           text="QUESTION #1"/>

    <!-- OPTIONS -->
    <VBox spacing="5">
        <children>
            <HBox spacing="10">
                <children>
                    <Button fx:id="option1Button" text="OPTION #1" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="option2Button" text="OPTION #2" HBox.hgrow="ALWAYS"/>
                </children>
            </HBox>

            <HBox spacing="10">
                <children>
                    <Button fx:id="option3Button" text="OPTION #3" HBox.hgrow="ALWAYS"/>
                    <Button fx:id="option4Button" text="OPTION #4" HBox.hgrow="ALWAYS"/>
                </children>
            </HBox>
        </children>
    </VBox>

</VBox>

