<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootGrid" styleClass="themed-bg" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.FiltersController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="800.0" spacing="20.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>

            <children>

                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308">
                    <children>
                        <Button onAction="#onBackToSettingsClicked" prefHeight="50.0" prefWidth="60.0" styleClass="settings-back-button" text="â¬…">
                           <font><Font name="Copperplate Gothic Bold" size="20.0" /></font>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label text="Filters" textFill="#fafafa">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="40.0" />
                            </font>
                        </Label>

                        <Region HBox.hgrow="ALWAYS" />
                        
                        <Region prefWidth="60.0" /> 
                    </children>
                </HBox>

                <VBox spacing="16.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets top="20.0" />
                    </padding>
                    <children>

                        <HBox alignment="CENTER_LEFT" minHeight="80.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15)); -fx-border-color: rgba(255,255,255,0.50);" styleClass="filter-row">
                            <padding><Insets left="30.0" right="20.0" /></padding>
                            <children>
                                <Label styleClass="filter-label" text="Music" />
                                <Region HBox.hgrow="ALWAYS" />
                                <StackPane onMouseClicked="#onMusicToggled" style="-fx-cursor: hand;">
                                     <children>
                                         <ImageView fx:id="musicToggle" fitHeight="60.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../Images/switch-on.png" /></image>
                                         </ImageView>
                                     </children>
                                </StackPane>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" minHeight="80.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15)); -fx-border-color: rgba(255,255,255,0.50);" styleClass="filter-row">
                            <padding><Insets left="30.0" right="20.0" /></padding>
                            <children>
                                <Label styleClass="filter-label" text="Sound" />
                                <Region HBox.hgrow="ALWAYS" />
                                <StackPane onMouseClicked="#onSoundToggled" style="-fx-cursor: hand;">
                                     <children>
                                         <ImageView fx:id="soundToggle" fitHeight="60.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../Images/switch-on.png" /></image>
                                         </ImageView>
                                     </children>
                                </StackPane>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" minHeight="80.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15)); -fx-border-color: rgba(255,255,255,0.50);" styleClass="filter-row">
                            <padding><Insets left="30.0" right="20.0" /></padding>
                            <children>
                                <Label styleClass="filter-label" text="Timer" />
                                <Region HBox.hgrow="ALWAYS" />
                                <StackPane onMouseClicked="#onTimerToggled" style="-fx-cursor: hand;">
                                     <children>
                                         <ImageView fx:id="timerToggle" fitHeight="60.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../Images/switch-on.png" /></image>
                                         </ImageView>
                                     </children>
                                </StackPane>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" minHeight="80.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15)); -fx-border-color: rgba(255,255,255,0.50);" styleClass="filter-row">
                            <padding><Insets left="30.0" right="20.0" /></padding>
                            <children>
                                <Label styleClass="filter-label" text="Smart Hints" />
                                <Region HBox.hgrow="ALWAYS" />
                                <StackPane onMouseClicked="#onSmartHintsToggled" style="-fx-cursor: hand;">
                                     <children>
                                         <ImageView fx:id="smartHintsToggle" fitHeight="60.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../Images/switch-on.png" /></image>
                                         </ImageView>
                                     </children>
                                </StackPane>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" minHeight="80.0" style="-fx-background-color: linear-gradient(to bottom right, rgba(255,255,255,0.30), rgba(255,255,255,0.15)); -fx-border-color: rgba(255,255,255,0.50);" styleClass="filter-row">
                            <padding><Insets left="30.0" right="20.0" /></padding>
                            <children>
                                <Label styleClass="filter-label" text="Auto Remove Flag" />
                                <Region HBox.hgrow="ALWAYS" />
                                <StackPane onMouseClicked="#onAutoRemoveFlagToggled" style="-fx-cursor: hand;">
                                     <children>
                                         <ImageView fx:id="autoRemoveFlagToggle" fitHeight="60.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                                            <image><Image url="@../Images/switch-on.png" /></image>
                                         </ImageView>
                                     </children>
                                </StackPane>
                            </children>
                        </HBox>

                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
    
    <stylesheets>
        <URL value="@../css/base.css" />
    </stylesheets>

</StackPane>
