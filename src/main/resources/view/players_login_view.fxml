<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="root"
          maxHeight="-Infinity" maxWidth="-Infinity"
          minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="750.0" prefWidth="1200.0"
          style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2, #f093fb);"
          stylesheets="@../css/board.css"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="control.GameController">

    <!-- ===== Columns & Rows (same proportions as before) ===== -->
    <columnConstraints>
        <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints maxWidth="490.0" minWidth="490.0" prefWidth="490.0" />
        <ColumnConstraints maxWidth="20.0"  minWidth="20.0"  prefWidth="20.0"  />
        <ColumnConstraints maxWidth="490.0" minWidth="490.0" prefWidth="490.0" />
        <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints maxHeight="48.0" minHeight="48.0" prefHeight="48.0" />
        <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" />
        <RowConstraints maxHeight="60.0" minHeight="60.0" prefHeight="60.0" />
        <RowConstraints maxHeight="490.0" minHeight="490.0" prefHeight="490.0" />
        <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="80.0" />
        <RowConstraints maxHeight="58.0" minHeight="58.0" prefHeight="58.0" />
    </rowConstraints>

    <children>

        <!-- ===== Top buttons row (Exit / Help / Back / Pause / Sound) ===== -->
        <HBox alignment="CENTER_LEFT"
              prefHeight="50.0" prefWidth="1200.0"
              spacing="10.0"
              GridPane.columnSpan="5" GridPane.rowIndex="0">
            <children>
                <Button text="Exit"
                        onAction="#onExitBtnClicked"
                        prefHeight="32.0" prefWidth="90.0"
                        style="-fx-background-color: #ef4444;
                               -fx-text-fill: white;
                               -fx-background-radius: 20;
                               -fx-cursor: hand;"
                        styleClass="zoom-on-hover">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                </Button>

                <Button text="Help"
                        onAction="#onHelpBtnClicked"
                        prefHeight="32.0" prefWidth="90.0"
                        style="-fx-background-color: #22c55e;
                               -fx-text-fill: white;
                               -fx-background-radius: 20;
                               -fx-cursor: hand;"
                        styleClass="zoom-on-hover">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <Button text="Back"
                        onAction="#onBackBtnClicked"
                        prefHeight="32.0" prefWidth="90.0"
                        style="-fx-background-color: #4b5563;
                               -fx-text-fill: white;
                               -fx-background-radius: 20;
                               -fx-cursor: hand;"
                        styleClass="zoom-on-hover">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <!-- spacer -->
                <Label text="" prefWidth="700.0" />

                <!-- Pause -->
                <Button fx:id="pauseBtn"
                        onAction="#onPauseGame"
                        prefHeight="40.0" prefWidth="40.0"
                        style="-fx-background-radius: 40;
                               -fx-background-color: transparent;
                               -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/pause.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Music -->
                <Button fx:id="musicIsOnButton"
                        onAction="#onSoundOff"
                        prefHeight="40.0" prefWidth="40.0"
                        style="-fx-background-radius: 40;
                               -fx-background-color: transparent;
                               -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/volume.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>

        <!-- ===== Difficulty + Time bar (glass pill) ===== -->
        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <children>
                <Label prefWidth="900.0" prefHeight="50.0"
                       style="-fx-background-color: rgba(15,23,42,0.65);
                              -fx-background-radius: 30;
                              -fx-border-color: rgba(255,255,255,0.3);
                              -fx-border-radius: 30;
                              -fx-border-width: 1.5;">
                </Label>

                <HBox alignment="CENTER" spacing="200.0">
                    <children>
                        <Label fx:id="difficultyLabel"
                               text="Difficulty: -"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="timeLabel"
                               text="Time: 00:00"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>

        <!-- ===== Bombs left bar (glass pill) ===== -->
        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <children>
                <Label prefWidth="900.0" prefHeight="45.0"
                       style="-fx-background-color: rgba(15,23,42,0.65);
                              -fx-background-radius: 30;
                              -fx-border-color: rgba(255,255,255,0.25);
                              -fx-border-radius: 30;
                              -fx-border-width: 1.2;" />

                <HBox alignment="CENTER" spacing="250.0">
                    <children>
                        <Label fx:id="player1BombsLeftLabel"
                               text="Player 1, Mines left: 0"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="player2BombsLeftLabel"
                               text="Player 2, Mines left: 0"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>

        <!-- ===== BOARDS (keep 490x490 like original) ===== -->
        <HBox alignment="CENTER"
              prefHeight="490.0" prefWidth="1000.0"
              spacing="80.0"
              GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
            <children>

                <!-- Player 1 board -->
                <StackPane prefWidth="520.0" prefHeight="490.0">
                    <children>
                        <!-- rounded dark background behind grid -->
                        <Label prefWidth="520.0" prefHeight="490.0"
                               style="-fx-background-color: rgba(15,23,42,0.9);
                                      -fx-background-radius: 40;
                                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 30, 0.4, 0, 8);" />
                        <GridPane fx:id="player1Grid"
                                  prefWidth="490.0" prefHeight="490.0"
                                  style="-fx-padding: 8;"
                                  styleClass="grid-board">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                    </children>
                </StackPane>

                <!-- Player 2 board -->
                <StackPane prefWidth="520.0" prefHeight="490.0">
                    <children>
                        <!-- rounded dark background -->
                        <Label prefWidth="520.0" prefHeight="490.0"
                               style="-fx-background-color: rgba(15,23,42,0.9);
                                      -fx-background-radius: 40;
                                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 30, 0.4, 0, 8);" />
                        <GridPane fx:id="player2Grid"
                                  prefWidth="490.0" prefHeight="490.0"
                                  style="-fx-padding: 8;"
                                  styleClass="grid-board">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                    </children>
                </StackPane>

            </children>
        </HBox>

        <!-- ===== Hearts bar (glass pill) ===== -->
        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="4"
                   GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <children>
                <Label prefWidth="900.0" prefHeight="60.0"
                       style="-fx-background-color: rgba(15,23,42,0.75);
                              -fx-background-radius: 30;
                              -fx-border-color: rgba(255,255,255,0.25);
                              -fx-border-radius: 30;
                              -fx-border-width: 1.2;" />

                <HBox alignment="CENTER_LEFT" spacing="10.0" prefWidth="860.0">
                    <children>
                        <Label text="Shared Hearts:"
                               textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>

                        <HBox fx:id="heartsBox"
                              alignment="CENTER_LEFT"
                              spacing="5.0"
                              prefHeight="50.0" />
                    </children>
                </HBox>
            </children>
        </StackPane>

        <!-- ===== Score label on the right ===== -->
        <HBox alignment="CENTER_RIGHT"
              prefHeight="58.0" prefWidth="1200.0"
              GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="5">
            <children>
                <Label fx:id="scoreLabel"
                       text="Score: 0"
                       textFill="#E5E7EB">
                    <font>
                        <Font name="Copperplate Gothic Light" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets right="40.0" />
                    </HBox.margin>
                </Label>
            </children>
        </HBox>

    </children>
</GridPane>
