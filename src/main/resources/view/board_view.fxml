<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="770.0" prefWidth="1300.0" style="-fx-background-color: linear-gradient(to bottom right, #667eea, #764ba2, #f093fb);" stylesheets="@../css/board.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.GameController">

    <columnConstraints>
        <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints maxWidth="490.0" minWidth="490.0" prefWidth="490.0" />
        <ColumnConstraints maxWidth="20.0" minWidth="20.0" prefWidth="20.0" />
        <ColumnConstraints maxWidth="490.0" minWidth="490.0" prefWidth="490.0" />
        <ColumnConstraints maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints maxHeight="48.0" minHeight="48.0" prefHeight="48.0" />
        <RowConstraints maxHeight="70.0" minHeight="70.0" prefHeight="70.0" />
        <RowConstraints maxHeight="90.0" minHeight="90.0" prefHeight="90.0" />
        <RowConstraints maxHeight="490.0" minHeight="490.0" prefHeight="490.0" />
        <RowConstraints maxHeight="80.0" minHeight="80.0" prefHeight="90.0" />
    </rowConstraints>

    <children>

        <!-- Top bar: Exit / Help / Back / Pause / Sound / Music -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1200.0" spacing="10.0" GridPane.columnSpan="5" GridPane.rowIndex="0">
            <children>

                <Button fx:id="exitBtn" onAction="#onExitBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #ef4444;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Exit">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                </Button>

                <Button fx:id="helpBtn" onAction="#onHelpBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #22c55e;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Help">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <Button fx:id="backBtn" onAction="#onBackBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #4b5563;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Back">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <Label prefWidth="700.0" text="" />

                <Button fx:id="pauseBtn" onAction="#onPauseGame" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;                                -fx-background-color: transparent;                                -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/pause.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="soundButton" onAction="#onSoundOff" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;                                -fx-background-color: transparent;                                -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/volume.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="musicButton" onAction="#onMusicToggle" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;                                -fx-background-color: transparent;                                -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/music.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

            </children>
        </HBox>

        <!-- Difficulty + Time bar -->
        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <children>
                <Label fx:id="label" prefHeight="50.0" prefWidth="900.0" style="-fx-background-color: rgba(15,23,42,0.65);                               -fx-background-radius: 30;                               -fx-border-color: rgba(255,255,255,0.3);                               -fx-border-radius: 30;                               -fx-border-width: 1.5;" />

                <HBox alignment="CENTER" spacing="200.0">
                    <children>
                        <Label fx:id="difficultyLabel" text="Difficulty: -" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="timeLabel" text="Time: 00:00" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>

        <!-- Mines-left bar -->
<StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
    <children>

        <!-- background card -->
        <Label prefHeight="86.0" prefWidth="1242.0" style="-fx-background-color: rgba(15,23,42,0.65);                       -fx-background-radius: 30;                       -fx-border-color: rgba(255,255,255,0.25);                       -fx-border-radius: 30;                       -fx-border-width: 1.2;">
            <GridPane.margin>
    		<Insets left="100.0" />
			</GridPane.margin>

        </Label>

        <!-- content -->
        <GridPane alignment="CENTER" hgap="30" prefHeight="90.0" prefWidth="1234.0" vgap="0">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
                <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
            </columnConstraints>

            <children>
                <!-- ===== Player 1 (col 0) ===== -->
                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="494.0" spacing="12" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <children>
                        <StackPane prefHeight="70.0" prefWidth="70.0" style="-fx-background-radius: 35; -fx-border-radius: 35;" styleClass="avatar-ring avatar-ring-p1">
                            <children>
                                <ImageView fx:id="player1AvatarImage" fitHeight="70.0" fitWidth="70.0" preserveRatio="true" />
                            </children>
                            <clip>
                                <Circle centerX="35" centerY="35" radius="35" />
                            </clip>
                        </StackPane>

                        <HBox fx:id="player1StatsBox" alignment="CENTER_LEFT" spacing="10" />
                    </children>

                    <GridPane.margin>
                        <Insets left="20.0" top="10.0" />
                    </GridPane.margin>
                </HBox>

                <!-- ===== Player 2 (col 1) ===== -->
                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="494.0" spacing="12" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <children>
                        <StackPane prefHeight="70.0" prefWidth="70.0" style="-fx-background-radius: 35; -fx-border-radius: 35;" styleClass="avatar-ring avatar-ring-p2">
                            <children>
                                <ImageView fx:id="player2AvatarImage" fitHeight="70.0" fitWidth="70.0" preserveRatio="true" />
                            </children>
                            <clip>
                                <Circle centerX="35" centerY="35" radius="35" />
                            </clip>
                        </StackPane>

                        <HBox fx:id="player2StatsBox" alignment="CENTER_LEFT" spacing="10" />
                    </children>

                    <GridPane.margin>
                        <Insets left="20.0" top="10.0" />
                    </GridPane.margin>
                </HBox>

            </children>

            <StackPane.margin>
                <Insets left="100.0" />
            </StackPane.margin>
               <rowConstraints>
                  <RowConstraints />
               </rowConstraints>
        </GridPane>

    </children>
</StackPane>
        

                   
				

        <!-- ====== BOARDS ROW (rowIndex=3) WITH AVATARS ====== -->
    <HBox alignment="CENTER" prefHeight="490.0" prefWidth="1000.0" spacing="80.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
        <children>

            <!-- Player 1 board + avatar -->
            <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="520.0">
                <children>

                    <!-- red card background -->
                    <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" styleClass="board-card board-card-p1" />

                    <!-- vertical layout: avatar on top, grid under it -->
                    <VBox alignment="TOP_CENTER" spacing="18">
                        <children>


                            <!-- board grid -->
                            <GridPane fx:id="player1Grid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="430.0" prefWidth="490.0" style="-fx-padding: 8;" styleClass="grid-board grid-board-p1">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="ALWAYS" />
                                </rowConstraints>
                           <VBox.margin>
                              <Insets bottom="140.0" />
                           </VBox.margin>
                            </GridPane>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="18.0" />
                        </padding>
                     <StackPane.margin>
                        <Insets top="100.0" />
                     </StackPane.margin>
                    </VBox>

                </children>
                <padding>
                    <Insets top="25.0" />
                </padding>
            </StackPane>

               <!-- Player 2 board + avatar -->
            <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="520.0">
                <children>

                       <!-- green card background -->
                    <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" styleClass="board-card board-card-p2">
                        <StackPane.margin>
                            <Insets right="50.0" />
                        </StackPane.margin>
                    </Label>

                       <VBox alignment="TOP_CENTER" spacing="18">
                        <children>

   
                               <!-- board grid -->
                            <GridPane fx:id="player2Grid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="430.0" prefWidth="490.0" style="-fx-padding: 8;" styleClass="grid-board grid-board-p2">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <rowConstraints>
                                    <RowConstraints vgrow="ALWAYS" />
                                </rowConstraints>
                                <StackPane.margin>
                                    <Insets right="50.0" />
                                </StackPane.margin>
                           <VBox.margin>
                              <Insets bottom="140.0" />
                           </VBox.margin>
                            </GridPane>
                        </children>
                        <padding>
                            <Insets bottom="10.0" left="10.0" right="10.0" top="18.0" />
                        </padding>
                     <StackPane.margin>
                        <Insets top="100.0" />
                     </StackPane.margin>
                    </VBox>

                   </children>
                <padding>
                    <Insets top="25.0" />
                </padding>
            </StackPane>

        </children>
    </HBox>

        <!-- Hearts + Score bar -->
        <StackPane prefWidth="1001.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <children>
                <Label prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: rgba(15,23,42,0.75);                               -fx-background-radius: 30;                               -fx-border-color: rgba(255,255,255,0.25);                               -fx-border-radius: 30;                               -fx-border-width: 1.2;" />
      
                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="903.0" spacing="10.0">
                    <children>
                        <Label text="Shared Hearts:" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>
      
                        <HBox fx:id="heartsBox" alignment="CENTER_LEFT" prefHeight="50.0" spacing="5.0" />
      
                        <Label fx:id="scoreLabel" text="Score: 0" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="40.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                    <StackPane.margin>
                        <Insets />
                    </StackPane.margin>
                </HBox>
            </children>
            <GridPane.margin>
                <Insets bottom="10.0" />
            </GridPane.margin>
        </StackPane>

    </children>
</GridPane>
