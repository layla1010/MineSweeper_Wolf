<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>

<BorderPane prefWidth="1200.0" prefHeight="750.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="control.HowToPlayController"
            stylesheets="@../css/board.css"
            style="-fx-background-color: linear-gradient(to bottom right, #0f172a, #312e81, #701a75);">

    <!-- TOP BAR -->
    <top>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="14.0" right="18.0" bottom="10.0" left="18.0"/>
            </padding>

            <HBox spacing="12.0" alignment="CENTER_LEFT">
                <Button fx:id="backBtn" text="Back" onAction="#onBack"
                        style="-fx-background-radius: 18; -fx-background-color: #475569; -fx-text-fill: white; -fx-cursor: hand;"/>

                <Label text="HOW TO PLAY (Interactive Demo)"
                       style="-fx-text-fill: white; -fx-font-size: 22; -fx-font-weight: bold;"/>
            </HBox>

            <!-- HUD -->
            <HBox spacing="18.0" alignment="CENTER_LEFT"
                  style="-fx-background-color: rgba(15,23,42,0.45);
                         -fx-background-radius: 18;
                         -fx-border-radius: 18;
                         -fx-border-color: rgba(255,255,255,0.15);
                         -fx-border-width: 1;">
                <padding>
                    <Insets top="10.0" right="14.0" bottom="10.0" left="14.0"/>
                </padding>

                <Label fx:id="turnLabel" text="Turn: Player 1"
                       style="-fx-text-fill: #E5E7EB; -fx-font-size: 16; -fx-font-weight: bold;"/>

                <Label fx:id="p1ScoreLabel" text="P1 Score: 0"
                       style="-fx-text-fill: #C7D2FE; -fx-font-size: 15;"/>

                <Label fx:id="p2ScoreLabel" text="P2 Score: 0"
                       style="-fx-text-fill: #FBCFE8; -fx-font-size: 15;"/>

                <Label fx:id="heartsLabel" text="Hearts: 3"
                       style="-fx-text-fill: #FCA5A5; -fx-font-size: 15;"/>

                <Label fx:id="giftsLabel" text="Gifts: 0"
                       style="-fx-text-fill: #FDE68A; -fx-font-size: 15;"/>

                <Label fx:id="minesLabel" text="Mines left: 5"
                       style="-fx-text-fill: #FECACA; -fx-font-size: 15;"/>

                <Label fx:id="questionsLabel" text="Questions left: 4"
                       style="-fx-text-fill: #A7F3D0; -fx-font-size: 15;"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: 2 BOARDS -->
    <center>
        <StackPane>
            <padding>
                <Insets top="10.0" right="18.0" bottom="10.0" left="18.0"/>
            </padding>

            <StackPane fx:id="demoCard"
                       style="-fx-background-color: rgba(15,23,42,0.55);
                              -fx-background-radius: 28;
                              -fx-border-radius: 28;
                              -fx-border-color: rgba(255,255,255,0.18);
                              -fx-border-width: 1.2;">
                <padding>
                    <Insets top="18.0" right="18.0" bottom="18.0" left="18.0"/>
                </padding>

                <!-- LAYER where we place boards + overlays -->
                <StackPane fx:id="demoLayer" pickOnBounds="false">

                    <HBox spacing="18.0" alignment="CENTER">
                        <!-- P1 board -->
                        <VBox spacing="8.0" alignment="CENTER">
                            <Label text="Player 1 Board"
                                   style="-fx-text-fill: #C7D2FE; -fx-font-size: 16; -fx-font-weight: bold;"/>
                            <GridPane fx:id="demoGridP1" prefWidth="520.0" prefHeight="520.0"
                                      style="-fx-padding: 8;"
                                      styleClass="grid-board grid-board-p1"/>
                        </VBox>

                        <!-- P2 board -->
                        <VBox spacing="8.0" alignment="CENTER">
                            <Label text="Player 2 Board"
                                   style="-fx-text-fill: #FBCFE8; -fx-font-size: 16; -fx-font-weight: bold;"/>
                            <GridPane fx:id="demoGridP2" prefWidth="520.0" prefHeight="520.0"
                                      style="-fx-padding: 8;"
                                      styleClass="grid-board grid-board-p2"/>
                        </VBox>
                    </HBox>

                    <!-- highlight overlay -->
                    <StackPane fx:id="highlight"
                               managed="false"
                               mouseTransparent="true"
                               visible="false"
                               style="-fx-border-color: #00e5ff;
                                      -fx-border-width: 3;
                                      -fx-border-radius: 10;
                                      -fx-background-radius: 10;
                                      -fx-effect: dropshadow(gaussian, rgba(0,229,255,0.75), 18, 0.35, 0, 0);
                                      -fx-background-color: rgba(0,229,255,0.08);"/>

                </StackPane>
            </StackPane>
        </StackPane>
    </center>

    <!-- BOTTOM CONTROLS -->
    <bottom>
        <HBox spacing="14.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10.0" right="18.0" bottom="16.0" left="18.0"/>
            </padding>

            <Button fx:id="prevBtn" text="Prev" onAction="#onPrev"
                    style="-fx-background-radius: 18; -fx-background-color: #334155; -fx-text-fill: white; -fx-cursor: hand;"/>

            <Button fx:id="playPauseBtn" text="Play" onAction="#onPlayPause"
                    style="-fx-background-radius: 18; -fx-background-color: #22c55e; -fx-text-fill: white; -fx-cursor: hand;"/>

            <Button fx:id="nextBtn" text="Next" onAction="#onNext"
                    style="-fx-background-radius: 18; -fx-background-color: #334155; -fx-text-fill: white; -fx-cursor: hand;"/>

            <Label fx:id="captionLabel"
                   text="Caption..."
                   style="-fx-text-fill: #E5E7EB; -fx-font-size: 16;"
                   HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>
