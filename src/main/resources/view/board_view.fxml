    <children>

        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1200.0" spacing="10.0" GridPane.columnSpan="5" GridPane.rowIndex="0">
            <children>
                <Button onAction="#onExitBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #ef4444;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Exit">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                    <HBox.margin>
                        <Insets left="15.0" />
                    </HBox.margin>
                </Button>

                <Button onAction="#onHelpBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #22c55e;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Help">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <Button onAction="#onBackBtnClicked" prefHeight="32.0" prefWidth="90.0" style="-fx-background-color: #4b5563;                                -fx-text-fill: white;                                -fx-background-radius: 20;                                -fx-cursor: hand;" styleClass="zoom-on-hover" text="Back">
                    <font>
                        <Font name="Copperplate Gothic Bold" size="16.0" />
                    </font>
                </Button>

                <Label prefWidth="700.0" text="" />

                <Button fx:id="pauseBtn" onAction="#onPauseGame" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;                                -fx-background-color: transparent;                                -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/pause.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button fx:id="musicIsOnButton" onAction="#onSoundOff" prefHeight="40.0" prefWidth="40.0" style="-fx-background-radius: 40;                                -fx-background-color: transparent;                                -fx-cursor: hand;">
                    <graphic>
                        <ImageView fitHeight="32.0" fitWidth="32.0" preserveRatio="true">
                            <image>
                                <Image url="@/Images/volume.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>

        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <children>
                <Label prefHeight="50.0" prefWidth="900.0" style="-fx-background-color: rgba(15,23,42,0.65);                               -fx-background-radius: 30;                               -fx-border-color: rgba(255,255,255,0.3);                               -fx-border-radius: 30;                               -fx-border-width: 1.5;">
                </Label>

                <HBox alignment="CENTER" spacing="200.0">
                    <children>
                        <Label fx:id="difficultyLabel" text="Difficulty: -" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="timeLabel" text="Time: 00:00" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>

        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <children>
                <Label prefHeight="45.0" prefWidth="900.0" style="-fx-background-color: rgba(15,23,42,0.65);                               -fx-background-radius: 30;                               -fx-border-color: rgba(255,255,255,0.25);                               -fx-border-radius: 30;                               -fx-border-width: 1.2;" />

                <HBox alignment="CENTER" spacing="250.0">
                    <children>
                        <Label fx:id="player1BombsLeftLabel" text="Player 1, Mines left: 0" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="18.0" />
                            </font>
                        </Label>

                        <Label fx:id="player2BombsLeftLabel" text="Player 2, Mines left: 0" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
        </StackPane>

        <HBox alignment="CENTER" prefHeight="490.0" prefWidth="1000.0" spacing="80.0" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="3">
            <children>

                <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="520.0">
                    <children>
                        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: rgba(15,23,42,0.9);                                       -fx-background-radius: 40;                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 30, 0.4, 0, 8);" />
                        <GridPane fx:id="player1Grid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="490.0" prefWidth="490.0" style="-fx-padding: 8;" styleClass="grid-board">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                        </GridPane>
                    </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
                </StackPane>

                <StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="520.0" prefWidth="520.0">
                    <children>
                        <Label maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: rgba(15,23,42,0.9);                                       -fx-background-radius: 40;                                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 30, 0.4, 0, 8);">
                     <StackPane.margin>
                        <Insets right="50.0" />
                     </StackPane.margin></Label>
                        <GridPane fx:id="player2Grid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="490.0" prefWidth="490.0" style="-fx-padding: 8;" styleClass="grid-board">
                            <columnConstraints>
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="ALWAYS" />
                            </rowConstraints>
                     <StackPane.margin>
                        <Insets right="50.0" />
                     </StackPane.margin>
                        </GridPane>
                    </children>
               <padding>
                  <Insets top="25.0" />
               </padding>
                </StackPane>

            </children>
        </HBox>

        <StackPane GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <children>
                <Label prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: rgba(15,23,42,0.75);                               -fx-background-radius: 30;                               -fx-border-color: rgba(255,255,255,0.25);                               -fx-border-radius: 30;                               -fx-border-width: 1.2;" />

                <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="903.0" spacing="10.0">
                    <children>
                        <Label text="Shared Hearts:" textFill="#E5E7EB">
                            <font>
                                <Font name="Copperplate Gothic Light" size="16.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="25.0" />
                            </HBox.margin>
                        </Label>

                        <HBox fx:id="heartsBox" alignment="CENTER_LEFT" prefHeight="50.0" spacing="5.0" />
                      <Label fx:id="scoreLabel" text="Score: 0" textFill="#E5E7EB">
                          <font>
                              <Font name="Copperplate Gothic Light" size="18.0" />
                          </font>
                          <HBox.margin>
                              <Insets right="40.0" />
                          </HBox.margin>
                      </Label>
                    </children>
               <StackPane.margin>
                  <Insets />
               </StackPane.margin>
                </HBox>
            </children>
         <GridPane.margin>
            <Insets top="50.0" />
         </GridPane.margin>
        </StackPane>

    </children>
